<record id="ivaz_file_view_form" model="ir.ui.view">
    <field name="name">ivaz.file.form</field>
    <field name="model">ivaz.file</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <group name="main">
                        <field name="name" invisible="1"/>
                        <field name="ivaz_file" filename="name"/>
                        <field name="picking_id"/>
                    </group>
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="ivaz_file_view_tree" model="ir.ui.view">
    <field name="name">ivaz.file.tree</field>
    <field name="model">ivaz.file</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="picking_id"/>
        </tree>
    </field>
</record>

<record id="ivaz_file_action" model="ir.actions.act_window">
    <field name="name">i.VAZ Files</field>
    <field name="res_model">ivaz.file</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem id="ivaz_menu_root"
    name="i.VAZ"
    parent="base_imas.imas_menu_root"
/>
<menuitem id="ivaz_file_menu"
    action="ivaz_file_action"
    parent="ivaz_menu_root"
/>

</odoo>
